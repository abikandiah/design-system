{
	"extends": "./tsconfig.app.json", // Inherit all your base settings (target, jsx, etc.)
	"compilerOptions": {
        // --- Core Settings for Declaration Files ---
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "noEmit": false,

        // CRITICAL FIX: These two lines tell TSC to take the file structure 
        // starting at 'src' and replicate it exactly into the 'dist' folder.
        // This ensures dist/components/Banner.d.ts is generated.
        "rootDir": "./src",
        "outDir": "./dist",

	},
    // Only compile files within the src directory
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.stories.ts",
        "**/*.stories.tsx",
        "**/*.test.ts",
        "**/*.test.tsx"
    ]
}
